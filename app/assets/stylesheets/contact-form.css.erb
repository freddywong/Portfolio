.contact-btn {
  border-radius: 5px;  
  font-family: Arial;
  color: #ffffff;
  font-size: 29px;
  background: rgba(255,255,255,0);
  padding: 10px 20px 10px 20px;
  text-decoration: none;
  border: 3px solid white;
}

.contact-btn:hover {
  text-decoration: none;
  color: #1c3a5c;
}

#contact-form {
  text-shadow: none;
  font-family: lato, helvetica;
  color:#1c3a5c;  
  width: 700px;
  height: 300px;
  position:fixed;
  top: 40%;
  left: 50%;
  margin-top: -150px;
  margin-left: -350px;

}

.contact-field {
  width: 500px;
  font-size: 1.5em;
  padding-bottom: 30px;
  margin-bottom: 10px;
  margin-top: 10px;

}

.contact-title {
  color:#fff;
}

#message-field {
  height: 100px;
}